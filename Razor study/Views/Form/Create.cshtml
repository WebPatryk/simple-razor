
@model Razor_study.Models.FormModel;
@{
    ViewData["Title"] = "Form-Create";
}


<h1 class="display-4">Formularz</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Form" asp-action="Create" method="post">

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" type="number" min="1" max="5" step="1"/>
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

